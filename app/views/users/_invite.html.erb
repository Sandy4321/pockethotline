<% if action?('new') %>
  <h1>Invite Volunteer</h1>
<% end %>

<%= form_for(User.new, :html => {:class => 'form-horizontal'}) do |f| %>
  <div class="control-group">
    <label for="email_body" class="control-label">The operator will receive this email that includes a link to login and set their password:</label>
  </div>

  <% if @user && @user.errors.any? %>
    <div id="error_explanation">
      <h2>Oops, check the errors below:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, "Volunteer's Name*", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
      <span class="help-block">First and last</span>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, "Volunteer's Email*", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Send Invite Email', :class => 'btn btn-inverse' %>
  </div>
<% end %>