<% if @user.on_call? %>
  $('.btn[data-status=on]').addClass('active');
  $('.btn[data-status=off]').removeClass('active');
  $('#toggle_link').text('End');
  $('#oncall-operators').append("<%= escape_javascript(render(@user)) %>");
  if ($('#oncall-operators a').length > 0) {
    $('#noone-oncall').hide();
  }
<% else %>
  $('.btn[data-status=off]').addClass('active');
  $('.btn[data-status=on]').removeClass('active');
  $('#toggle_link').text('Start');
  $('#oncall-operators #operator-<%= @user.id %>').remove();
  if ($('#oncall-operators a').length < 1) {
    $('#noone-oncall').show();
  }
<% end %>