<div class="row">
  <div class="span7">
    <div class="clearfix widget">
      <h3 class="with-pill-nav">Share</h3>
      <ul class="nav nav-pills">
        <%= active_link_to 'Widget', share_path, action?('widget') %>
        <%# active_link_to 'Twitter', share_path, action?('twitter') if logged_in? %>
      </ul>
    </div>

    <div class="row">
      <div class="span6">
        <div style="margin-bottom:20px">
          <script src="<%= url_for(widget_url(:format => :js)) %>" type="text/javascript"></script>
          <div id="pockethotline"></div>
        </div>
      </div>
    </div>

    <form class="form-stacked">
      <div class="clearfix">
        <label>Copy and paste the code below to insert on your site:</label>
        <div class="input">
          <textarea id="widget-code" class="span6"><script src="<%= url_for(widget_url(:format => :js)) %>" type="text/javascript"></script><div id="pockethotline"></div></textarea>
        </div>
      </div>
      <% if admin? %>
        <div class="actions">
          <%= link_to 'Edit Widget Text', "#edit-text", :class => 'btn', 'data-toggle' => 'modal' %>
        </div>
      <% end %>
    </form>
  </div>
</div>
<script type="text/javascript">
$("#widget-code").focus(function() {
    $this = $(this);
    $this.select();

    // Work around Chrome's little problem
    $this.mouseup(function() {
        // Prevent further mouseup intervention
        $this.unbind("mouseup");
        return false;
    });
});
</script>