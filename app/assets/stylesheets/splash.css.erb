	padding: 10px;
}

#hd #number {
	float: right;
	padding-top: 15px;
}
#hero {
	color: #fff;
	padding: 20px;
	border-top: 10px solid #CC3333;
	border-bottom: 10px solid #CC3333;
	text-shadow: 2px 2px 2px #000;
