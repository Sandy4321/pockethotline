input[type=submit], a.button {
	background: #CE181E;
	color: #fff;
	padding: 10px;
	-webkit-border-radius: 10px;
	-moz-border-radius: 10px;
	border-radius: 10px;
	font-weight: bold;
	border: none;
	text-decoration: none;
	line-height: 100%;
}

input[type=submit]:hover, a.button:hover {
	background: #000;
	color: #fff;
}


#hd {
	background: #CE181E;
	color: #fff;
	padding: 0px;
	margin-bottom: 0;
	overflow:hidden;
}

#hd a {
	text-decoration: none;
}

#accounts_new #hd {
	margin-bottom: 30px;
}

#hd #number {
	padding: 10px 0;
}

#hd #number h2 {
		font-size: 40px;
}

#hd #status-toggle {
	float: right;
}

#hd #status-toggle label.label {
	text-transform: uppercase;
	color: #ccc;
	font-size: 11px;
}

#hd a {
	color: #ccc;
}

h1, h2, h3 {
  font-family: "museo-sans-1","museo-sans-2",sans-serif;
}

h3.encouragement {
	font-weight: 100;
	font-style: italic;
	font-size: 25px;
	color: #CC3333;
	text-shadow: 1px 1px 1px #fff;
}

div.field {
	margin-bottom: 30px;
}

.field_with_errors label {
	color: #CC3333;
	font-weight: bold;
}

#error_explanation h3 {
	color: #CC3333;
}

#account-nav-line {
	margin-top: 3px;
	border-top: 1px solid #000;
}

ul#account-nav {
	text-transform: uppercase;
	list-style-type: none;
	margin: 0;
}

ul#account-nav li {
	margin: 0;
	float: left;
	margin-top: 8px;
}

ul#account-nav li a {
	padding: 10px;
	text-decoration: none;
	color: #000;
}

ul#account-nav li a:hover {
	background: #f5d8d9;
}

ul#account-nav li.active a, ul#account-nav li.active a:hover {
	font-weight: bold;
	background: #fff;
	border: 1px solid #000;
	border-top: none;
	text-decoration: none;
}

#widgets {
	text-align: center;
	margin-bottom: 20px;
	padding: 20px 0;
	clear: both;
	-webkit-border-radius: 20px;
	-moz-border-radius: 20px;
	border-radius: 20px;
	
	background: #F2E3C0; /* old browsers */
	background: -moz-linear-gradient(top, #F2E3C0 1%, #FFF 100%); /* firefox */

	background: -webkit-gradient(linear, left top, left bottom, color-stop(1%,#f7f2dd), color-stop(70%, #F2E3C0), color-stop(100%,#c6bc8e)); /* webkit */

	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#F2E3C0', endColorstr='#FFF',GradientType=0 ); /* ie */

	background: -o-linear-gradient(top, #F2E3C0 1%,#FFF 100%); /* opera */
}

#widgets h1#on-call, #widgets h1#total-points {
	font-size: 140px;
}

table.dashboard {
	width: 100%;
}

table.dashboard thead th {
	font-weight: bold;
	border-bottom: 1px solid #000;
}

table.dashboard tr td {
	padding: 5px;
}

#flash_notice, #flash_alert {
  font-weight: bold;
  background: #2981e4;
  padding: 5px 10px 6px;
  color: #fff;
  text-shadow: 0 -1px 1px rgba(0, 0, 0, 0.25); }

#flash_alert {
  background: red; }


ul.listview {
	list-style-type: none;
	padding: 0;
	margin: 0;
	margin-bottom: 20px;
	clear: both;
}

ul.listview li {
	margin: 0;
	border-bottom: 1px solid #ccc;
}

ul.listview li a {
	display: block;
	padding: 10px;
	text-decoration: none;
	color: #333;
	font-weight: bold;
	font-size: 13px;
}

ul.listview li a h3 {
	font-size: 13px;
	margin: 0;
}

ul.listview li a p {
	font-weight: normal;
	margin: 0;
}

ul.listview li a:hover {
	background: #f7f2dd;
}

#ft {
	background:#999;
	padding: 10px 0;
}

#ft a {
	color: #fff;
}

#ft #powered_by {
	float: right;
	text-align: right;
}

.service {
	margin-bottom: 20px;
	overflow: hidden;
}

.service .grid_2 {
	font-weight: bold;
}

#welcome {
	padding: 10px;
	background: #efe4bc;
}

#welcome ol {
	margin-bottom: 30px;
}

#welcome ol, #welcome ol li {
	list-style-type:none;
	margin: 0;
}

#welcome ol a{
	display: block;
	padding: 0px;
	padding-left: 4px;
	margin-bottom: 5px;
	background: #CE181E;
	font-weight: bold;
	width: 290px;
	text-decoration: none;
	font-size: 24px;
	-webkit-border-radius: 50px;
	-moz-border-radius: 50px;
	border-radius: 50px;
	color: #fff;
}

#welcome ol a:hover {
	text-shadow: 2px 2px 6px #390006;
}

#welcome ol a:hover span {
	text-shadow: none;
}

#welcome ol a.completed, #welcome ol a:hover.completed {
	background: #999;
	text-shadow: none;
}

#welcome ol a.completed span {
	color: #999;
}

#welcome ol a span {
	background: #fff;
	padding: 1px 9px;
	-webkit-border-radius: 100px;
	-moz-border-radius: 100px;
	border-radius: 100px;
	color: #CE181E;
}

#instructions {
		padding: 0;
		margin: 0;
	padding-left: 20px;
	border-left: 1px solid #ccc;
}

#instructions h5 {
	margin: 0;
	font-size: 13px;
}

#instructions p {
	line-height: 16px;
}




